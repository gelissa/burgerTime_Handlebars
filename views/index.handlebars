<div class="container">
<h1>BURGER TIME!</h1>

<h2 class="notEatenHeader">Burgers that are not eaten!</h2>

<ul class="notEatenList">
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<img src="https://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4114.png" alt="burger">

<h2 class="eatenHeader">Burgers that are eaten!</h2>

<ul class="eatenList">
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2 class="addBurger">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Hungry?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0"> Not Eaten!
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>
